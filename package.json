{
  "name": "herraise-mvp",
  "version": "1.0.0",
  "description": "HerRaise - Mentorship & Empowerment Platform for South Sudanese Girls",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "build": "chmod +x scripts/build.sh && ./scripts/build.sh",
    "build:local": "npm run build",
    "build:production": "npm run build",
    "prebuild": "echo 'Preparing build environment...'",
    "postbuild": "echo 'Build process completed'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "lint": "eslint backend/ tests/",
    "lint:fix": "eslint backend/ tests/ --fix",
    "security:audit": "npm audit --audit-level=high"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": ["mentorship", "empowerment", "south-sudan", "girls"],
  "author": "HerRaise Team",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/server.js"
    ]
}
}
